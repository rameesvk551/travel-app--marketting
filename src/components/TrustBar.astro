    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      {stats.map((stat, i) => (
        <div class="text-center group">
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-white shadow-md mb-3 group-hover:shadow-lg group-hover:-translate-y-0.5 transition-all text-2xl">
            {stat.icon}
          </div>
          <div class="text-2xl md:text-3xl font-display font-bold text-primary-500">{stat.value}</div>
          <div class="text-sm text-gray-500 mt-1">{stat.label}</div>
