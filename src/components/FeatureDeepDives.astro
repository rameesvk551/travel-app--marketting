            <div class={`w-14 h-14 rounded-xl ${feature.bgLight} flex items-center justify-center text-3xl group-hover:scale-110 transition-transform shadow-sm`}>
              {feature.icon}
            </div>
            <div>
              <h3 class="text-xl font-display font-bold text-dark-500">{feature.title}</h3>
              <p class={`text-sm ${feature.textColor} font-medium`}>{feature.subtitle}</p>
            </div>
          </div>

          <!-- Description -->
          <p class="text-gray-500 leading-relaxed mb-6">{feature.description}</p>

          <!-- Bullets -->
          <ul class="space-y-3">
            {feature.bullets.map(bullet => (
              <li class="flex items-start gap-3">
                <svg class={`w-5 h-5 ${feature.textColor} flex-shrink-0 mt-0.5`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-sm text-gray-600">{bullet}</span>
