<section id="hero" class="relative min-h-screen flex items-center overflow-hidden pt-20">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-500 via-primary-500 to-teal-600">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-20 left-10 w-72 h-72 bg-teal-400 rounded-full blur-3xl animate-pulse-slow"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-accent-400 rounded-full blur-3xl animate-pulse-slow animate-delay-500"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-nature-400 rounded-full blur-3xl animate-pulse-slow animate-delay-300"></div>
    </div>
    <!-- Grid pattern overlay -->
    <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(circle, #fff 1px, transparent 1px); background-size: 40px 40px;"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-0">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      
      <!-- Left: Content -->
      <div class="text-center lg:text-left">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-4 py-2 mb-8 animate-fade-in">
          <span class="w-2 h-2 bg-nature-400 rounded-full animate-pulse"></span>
          <span class="text-sm text-white/90 font-medium">AI-Powered Travel Planning</span>
        </div>

        <!-- Headline -->
        <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-display font-extrabold text-white leading-tight mb-6 animate-fade-in animate-delay-100">
          Plan Any Trip.
          <span class="block mt-2 bg-gradient-to-r from-accent-300 via-accent-400 to-accent-500 bg-clip-text text-transparent">
            Powered by AI.
          </span>
        </h1>

        <!-- Subheadline -->
        <p class="text-lg sm:text-xl text-white/80 max-w-xl mx-auto lg:mx-0 mb-10 leading-relaxed animate-fade-in animate-delay-200">
          Flights, hotels, tours, treks, and group trips ‚Äî orchestrated by AI in one intelligent workspace. 
          <span class="text-white font-medium">Stop juggling. Start exploring.</span>
        </p>

        <!-- Search Input -->
        <div id="hero-input" class="animate-fade-in animate-delay-300">
          <div class="flex flex-col sm:flex-row gap-3 max-w-lg mx-auto lg:mx-0">
            <div class="relative flex-1">
              <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <input 
                type="text" 
                placeholder="Where do you want to go?" 
                class="w-full pl-12 pr-4 py-4 rounded-xl bg-white text-dark-500 placeholder-gray-400 focus:outline-none focus:ring-4 focus:ring-accent-300/50 shadow-xl text-lg"
                id="hero-destination-input"
              />
            </div>
            <button class="btn-primary !rounded-xl whitespace-nowrap shadow-xl hover:shadow-2xl">
              Build My Itinerary
              <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </button>
          </div>
          <p class="text-white/50 text-sm mt-3 ml-1">‚ú® Free to use. No credit card required.</p>
        </div>

        <!-- Social Proof Mini -->
        <div class="flex items-center gap-4 mt-8 animate-fade-in animate-delay-400 justify-center lg:justify-start">
          <div class="flex -space-x-2">
            {[1,2,3,4,5].map(i => (
              <div class="w-8 h-8 rounded-full bg-gradient-to-br from-teal-300 to-primary-400 border-2 border-white/30 flex items-center justify-center text-xs text-white font-bold">
                {String.fromCharCode(64 + i)}
              </div>
            ))}
          </div>
          <p class="text-white/70 text-sm">
            <span class="text-white font-semibold">10,000+</span> travelers planning smarter
          </p>
        </div>
      </div>

      <!-- Right: Animated Mock UI -->
      <div class="relative hidden lg:block animate-fade-in-right animate-delay-300">
        <div class="relative">
          <!-- Main App Window -->
          <div class="bg-white/10 backdrop-blur-xl rounded-2xl border border-white/20 shadow-2xl p-1 overflow-hidden">
            <div class="bg-dark-500/90 rounded-xl overflow-hidden">
              <!-- Window Bar -->
              <div class="flex items-center gap-2 px-4 py-3 bg-dark-500/50 border-b border-white/10">
                <div class="flex gap-1.5">
                  <div class="w-3 h-3 rounded-full bg-red-400"></div>
                  <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
                  <div class="w-3 h-3 rounded-full bg-green-400"></div>
                </div>
                <div class="flex-1 text-center">
                  <span class="text-xs text-white/50">wayon.travel/itinerary</span>
                </div>
              </div>

              <!-- Mock Content -->
              <div class="p-6 space-y-4">
                <!-- AI Status -->
                <div class="flex items-center gap-3 animate-fade-in animate-delay-500">
                  <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-teal-400 to-primary-400 flex items-center justify-center">
                    <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                  </div>
                  <div class="flex-1">
                    <div class="text-sm text-white font-medium">AI is building your itinerary...</div>
                    <div class="w-full bg-white/10 rounded-full h-1.5 mt-1">
                      <div class="bg-gradient-to-r from-teal-400 to-accent-400 h-1.5 rounded-full" style="width: 70%; animation: typing 3s ease-out forwards;"></div>
                    </div>
                  </div>
                </div>

                <!-- Itinerary Items -->
                <div class="space-y-3">
                  {[
                    { day: 'Day 1', place: 'Delhi ‚Üí Manali', icon: '‚úàÔ∏è', color: 'from-blue-400 to-blue-500', delay: '600' },
                    { day: 'Day 2', place: 'Solang Valley Trek', icon: 'üèîÔ∏è', color: 'from-nature-400 to-nature-500', delay: '700' },
                    { day: 'Day 3', place: 'Old Manali + Caf√©s', icon: '‚òï', color: 'from-accent-400 to-accent-500', delay: '800' },
                  ].map(item => (
                    <div class={`flex items-center gap-3 bg-white/5 rounded-lg p-3 border border-white/10 animate-fade-in-left animate-delay-${item.delay}`}>
                      <div class={`w-10 h-10 rounded-lg bg-gradient-to-br ${item.color} flex items-center justify-center text-lg shadow-md`}>
                        {item.icon}
                      </div>
                      <div class="flex-1">
                        <div class="text-xs text-white/50">{item.day}</div>
                        <div class="text-sm text-white font-medium">{item.place}</div>
                      </div>
                      <svg class="w-4 h-4 text-white/30" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                      </svg>
                    </div>
                  ))}
                </div>

                <!-- Map Preview -->
                <div class="bg-gradient-to-br from-primary-400/20 to-teal-400/20 rounded-lg p-4 border border-white/10">
                  <div class="flex items-center justify-between mb-3">
                    <span class="text-xs text-white/60 font-medium">Route Preview</span>
                    <span class="text-xs text-teal-400">3 stops</span>
                  </div>
                  <div class="relative h-24">
                    <!-- Map dots/path animation -->
                    <svg class="w-full h-full" viewBox="0 0 300 80">
                      <path d="M30 60 Q80 10 150 40 Q220 70 270 20" fill="none" stroke="rgba(13,148,136,0.5)" stroke-width="2" stroke-dasharray="5,5" />
                      <circle cx="30" cy="60" r="6" fill="#0D9488" class="animate-pin-drop">
                        <animate attributeName="opacity" values="0;1" dur="0.5s" begin="1s" fill="freeze" />
                      </circle>
                      <circle cx="150" cy="40" r="6" fill="#F97316" class="animate-pin-drop animate-delay-200">
                        <animate attributeName="opacity" values="0;1" dur="0.5s" begin="1.5s" fill="freeze" />
                      </circle>
                      <circle cx="270" cy="20" r="6" fill="#16A34A" class="animate-pin-drop animate-delay-400">
                        <animate attributeName="opacity" values="0;1" dur="0.5s" begin="2s" fill="freeze" />
                      </circle>
                    </svg>
                  </div>
                </div>

                <!-- Quick Price -->
                <div class="flex items-center justify-between bg-nature-500/20 rounded-lg p-3 border border-nature-500/30 animate-fade-in animate-delay-800">
                  <span class="text-sm text-white/80">Estimated Budget</span>
                  <span class="text-lg font-bold text-nature-400">‚Çπ12,500</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Floating Cards -->
          <div class="absolute -top-4 -right-4 bg-white rounded-xl shadow-xl p-3 animate-float">
            <div class="flex items-center gap-2">
              <span class="text-2xl">üè®</span>
              <div>
                <div class="text-xs font-bold text-dark-500">Hotel Booked!</div>
                <div class="text-xs text-gray-500">‚Çπ2,100/night</div>
              </div>
            </div>
          </div>

          <div class="absolute -bottom-4 -left-4 bg-white rounded-xl shadow-xl p-3 animate-float animate-delay-500">
            <div class="flex items-center gap-2">
              <span class="text-2xl">‚úÖ</span>
              <div>
                <div class="text-xs font-bold text-dark-500">Visa: Not Required</div>
                <div class="text-xs text-nature-500">Domestic Trip</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce hidden sm:block">
    <svg class="w-6 h-6 text-white/40" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
