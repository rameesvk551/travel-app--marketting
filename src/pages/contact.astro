---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Contact" description="Get in touch with the Wayon team. We'd love to hear from you â€” questions, feedback, or partnership inquiries.">
  <Header />
  <main>
    <section class="pt-32 pb-16 bg-gradient-to-b from-primary-500 to-teal-600 text-white">
      <div class="container-narrow text-center">
        <h1 class="text-4xl sm:text-5xl font-display font-extrabold mb-6">
          Let's <span class="text-accent-300">Talk</span>
        </h1>
        <p class="text-xl text-white/80">Questions, feedback, partnerships â€” we're all ears.</p>
      </div>
    </section>

    <section class="section-padding bg-white">
