        <div class="grid md:grid-cols-2 gap-12">
          <!-- Form -->
          <div>
            <h2 class="text-2xl font-display font-bold text-dark-500 mb-6">Send a Message</h2>
            <form class="space-y-4">
              <div>
                <label class="block text-sm font-semibold text-dark-500 mb-1">Name</label>
                <input type="text" class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-teal-300 focus:border-teal-500" placeholder="Your name" />
              </div>
              <div>
                <label class="block text-sm font-semibold text-dark-500 mb-1">Email</label>
                <input type="email" class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-teal-300 focus:border-teal-500" placeholder="you@example.com" />
              </div>
              <div>
                <label class="block text-sm font-semibold text-dark-500 mb-1">Subject</label>
                <select class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-teal-300 focus:border-teal-500 bg-white">
                  <option>General Inquiry</option>
                  <option>Partnership</option>
                  <option>Bug Report</option>
                  <option>Feature Request</option>
                  <option>Press</option>
                </select>
              </div>
              <div>
                <label class="block text-sm font-semibold text-dark-500 mb-1">Message</label>
                <textarea rows="4" class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-teal-300 focus:border-teal-500 resize-none" placeholder="Tell us how we can help..."></textarea>
              </div>
              <button type="submit" class="btn-primary w-full">Send Message</button>
            </form>
          </div>

          <!-- Info -->
          <div>
            <h2 class="text-2xl font-display font-bold text-dark-500 mb-6">Get in Touch</h2>
            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 rounded-xl bg-teal-50 flex items-center justify-center text-2xl flex-shrink-0">ğŸ“§</div>
